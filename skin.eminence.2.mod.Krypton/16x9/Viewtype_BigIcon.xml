<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<includes>
    <include name="Viewtype_MediumIcon">
        <control type="group">
            <visible>Control.IsVisible(525)</visible>
            <left>side</left>
            <right>side</right>
            <top>top</top>
            <height>720</height>
			<include content="Object_Line">
                <param name="width" value="1879" />
                <param name="label" value="$INFO[Control.GetLabel(3),, ]$INFO[Control.GetLabel(4),[COLOR=PosterBorder]-[/COLOR] , ]" />
            </include>			
            <include condition="!Skin.HasSetting(darkoverlay)">Object_Background</include>
			<include condition="Skin.HasSetting(darkoverlay)">Object_Background2</include>
			<control type="group">
				<bottom>25</bottom>
				<include>Object_Scrollbar_Alphabet</include>
			</control>	
			<control type="scrollbar" id="61">   
				<visible>Skin.HasSetting(showscrollbars)</visible>
                <onup>50</onup>
				<ondown condition="Skin.HasSetting(AlphabetScrollbar)">6015</ondown>
                <ondown condition="!Skin.HasSetting(AlphabetScrollbar) + !String.IsEqual(Window(home).Property(HubReturn),Home)">ActivateWindow($INFO[Window(home).Property(HubReturn)])</ondown>				
                <top>710</top>
                <orientation>horizontal</orientation>
                <width>1880</width>
                <height>8</height>
                <animation effect="fade" condition="!Control.HasFocus(61) + !Container.Scrolling" time="200" start="100" end="0">Conditional</animation>
            </control>
            <control type="fixedlist" id="525">
                <top>10</top>
                <centerleft>50%</centerleft>
                <width>1722</width>
				<visible>String.IsEqual(Window(Home).Property(SkinHelper.ForcedView),525) | String.IsEmpty(Window(Home).Property(SkinHelper.ForcedView))</visible>
                <onup condition="!Skin.HasSetting(global.kioskmode)">9000</onup>
				<onback condition="!String.IsEqual(Window(home).Property(HubReturn),Home)">ActivateWindow($INFO[Window(home).Property(HubReturn)])</onback>
                <ondown>61</ondown>
                <onleft>525</onleft>
                <onright>525</onright>
                <focusposition>2</focusposition>
                <movement>2</movement>
                <preloaditems>0</preloaditems>
                <pagecontrol>61</pagecontrol>
                <orientation>horizontal</orientation>
                <viewtype label="31207">bigicon</viewtype>
                <scrolltime tween="quadratic">400</scrolltime>
                <itemlayout width="344.4" height="700">
                    <control type="group">
                        <top>side</top>
                        <left>15</left>
                        <right>15</right>
                        <height>456.6</height>
                        <control type="image">
                            <include condition="Skin.HasSetting(lightshadows) + !String.IsEqual(Skin.CurrentColourTheme,Light)">Object_Background_Shadows</include>
                            <aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
                            <texture background="true">$VAR[Image_Poster]</texture>
                        </control>
                        <control type="image">
                            <right>15</right>
                            <top>15</top>
                            <height>32</height>
                            <width>32</width>
                            <texture colordiffuse="ListLabel">$VAR[Image_Indicator]</texture>
                            <visible>!String.IsEmpty(ListItem.Overlay)</visible>
                        </control>
                    </control>
                </itemlayout>
                <focusedlayout width="344.4" height="700">
                    <control type="group">
                        <top>side</top>
                        <left>15</left>
                        <right>15</right>
                        <height>456.6</height>
                        <control type="image">
                            <include condition="Skin.HasSetting(lightshadows) + !String.IsEqual(Skin.CurrentColourTheme,Light)">Object_Background_Shadows</include>
                            <aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
                            <texture background="true">$VAR[Image_Poster]</texture>
                        </control>
                        <control type="image">
                            <right>15</right>
                            <top>15</top>
                            <height>32</height>
                            <width>32</width>
                            <texture colordiffuse="ListLabel">$VAR[Image_Indicator]</texture>
                            <visible>!String.IsEmpty(ListItem.Overlay)</visible>
                        </control>
                        <control type="image">
                            <left>-10</left>
                            <right>-10</right>
                            <top>-10</top>
                            <bottom>-10</bottom>
                            <texture colordiffuse="$VAR[HighlightColor]" border="12">common/border.png</texture>
                            <visible>Control.HasFocus(525)</visible>
                        </control>
                    </control>
                </focusedlayout>
            </control>
            <control type="group">
                <left>side</left>
                <right>side</right>
                <control type="grouplist">
                    <itemgap>0</itemgap>
                    <orientation>vertical</orientation>
                    <left>pad</left>
                    <right>pad</right>
                    <top>510</top>
                    <bottom>pad</bottom>
                    <control type="label">
                        <height>44</height>
                        <align>center</align>
                        <font>Font-InfoBox-Title</font>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    <control type="label">
                        <height>32</height>
                        <align>center</align>
                        <textcolor>$VAR[HighlightColor2]</textcolor>
                        <font>Font-ListInfo-Small-Bold</font>
                        <label>$VAR[Label_Genre,[UPPERCASE],[/UPPERCASE]]</label>
                    </control>				
                    <control type="label">
                        <height>40</height>
                        <align>center</align>
                        <font>Font-ListInfo-Small-Bold</font>
                        <label>$VAR[Label_ExtraInfo_Icons]</label>
                    </control>
                    <control type="textbox">
                        <height>auto</height>
                        <font>Font-ListInfo</font>
                        <align>center</align>
                        <label>$VAR[Label_Plot]</label>
                    </control>
                </control>
            </control>
        </control>
    </include>

    <!-- BIG WIDE FANART -->
    <include name="Viewtype_Lovefilm">
        <control type="group">
            <visible>Control.IsVisible(521)</visible>
            <control type="group">
                <left>side</left>
                <right>side</right>
                <top>top</top>
                <height>height</height>	
				<include content="Object_Line">
					<param name="width" value="1879" />
					<param name="label" value="$INFO[Control.GetLabel(3),, ]$INFO[Control.GetLabel(4),[COLOR=PosterBorder]-[/COLOR] , ]" />
				</include>				
				<include condition="!Skin.HasSetting(darkoverlay)">Object_Background</include>
				<include condition="Skin.HasSetting(darkoverlay)">Object_Background2</include>
				<include>Object_Scrollbar_Alphabet</include>
				<control type="scrollbar" id="61">   
					<visible>Skin.HasSetting(showscrollbars)</visible>
					<onup>50</onup>
					<ondown condition="Skin.HasSetting(AlphabetScrollbar)">6015</ondown>
					<ondown condition="!Skin.HasSetting(AlphabetScrollbar) + !String.IsEqual(Window(home).Property(HubReturn),Home)">ActivateWindow($INFO[Window(home).Property(HubReturn)])</ondown>				
					<top>710</top>
					<orientation>horizontal</orientation>
					<width>1880</width>
					<height>8</height>
					<animation effect="fade" condition="!Control.HasFocus(61) + !Container.Scrolling" time="200" start="100" end="0">Conditional</animation>
				</control>				
                <control type="group">
                    <right>0</right>
                    <width>1280</width>
                    <height>100%</height>
					<visible>String.IsEqual(Window(Home).Property(SkinHelper.ForcedView),521) | String.IsEmpty(Window(Home).Property(SkinHelper.ForcedView))</visible>
                    <control type="wraplist" id="521">
                        <width>100%</width>
                        <height>100%</height>
                        <pagecontrol>61</pagecontrol>
                        <preloaditems>2</preloaditems>
                        <onleft>521</onleft>
                        <onright>521</onright>
                        <viewtype label="31208">bigwide</viewtype>
                        <orientation>horizontal</orientation>
						<ondown>61</ondown>
                        <onup condition="!Skin.HasSetting(KioskMode)">9000</onup>
						<onback condition="!String.IsEqual(Window(home).Property(HubReturn),Home)">ActivateWindow($INFO[Window(home).Property(HubReturn)])</onback>
                        <scrolltime tween="quadratic">400</scrolltime>
                        <itemlayout width="1280" height="720">
                            <control type="image">
                                <width>100%</width>
                                <height>100%</height>
                                <aspectratio>scale</aspectratio>
                                <texture background="true" fallback="special://skin/extras/backgrounds/home.jpg">$VAR[Image_Thumb]</texture>
								<visible>!Container.Content(tvshows)</visible>
                            </control>
                            <control type="image">
                                <width>100%</width>
                                <height>100%</height>
                                <aspectratio>scale</aspectratio>
                                <texture background="true" fallback="special://skin/extras/backgrounds/home.jpg">$VAR[Image_Thumb2]</texture>
								<visible>Container.Content(tvshows)</visible>
                            </control>							
                        </itemlayout>
                        <focusedlayout width="1280" height="720">
                            <control type="image">
                                <width>100%</width>
                                <height>100%</height>
                                <aspectratio>scale</aspectratio>
                                <texture background="true" fallback="special://skin/extras/backgrounds/home.jpg">$VAR[Image_Thumb]</texture>
								<visible>!Container.Content(tvshows)</visible>
                            </control>
                            <control type="image">
                                <width>100%</width>
                                <height>100%</height>
                                <aspectratio>scale</aspectratio>
                                <texture background="true" fallback="special://skin/extras/backgrounds/home.jpg">$VAR[Image_Thumb2]</texture>
								<visible>Container.Content(tvshows)</visible>
                            </control>							
                        </focusedlayout>
                    </control>
                </control>
                <control type="group">
                    <right>1280</right>
                    <left>0</left>
                    <height>100%</height>
                    <control type="grouplist">
                        <usecontrolcoords>true</usecontrolcoords>
                        <itemgap>pad</itemgap>
                        <orientation>vertical</orientation>
                        <left>pad</left>
                        <right>pad</right>
                        <top>pad</top>
                        <bottom>60</bottom>
                        <control type="textbox">
                            <top>pad</top>
                            <left>pad</left>
                            <right>pad</right>
                            <height>auto</height>
                            <align>left</align>
                            <font>Font-InfoBox-Title</font>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                        <control type="textbox">
                            <left>pad</left>
                            <right>pad</right>
                            <height>auto</height>
                            <align>left</align>
                            <textcolor>$VAR[HighlightColor2]</textcolor>
                            <font>Font-ListInfo-Small-Bold</font>
                            <label>$VAR[Label_Genre,[UPPERCASE],[/UPPERCASE]]</label>
                        </control>
                        <control type="textbox">
                            <left>pad</left>
                            <right>pad</right>
                            <height max="550">auto</height>
                            <font>Font-ListInfo</font>
                            <align>justify</align>
                            <label>$VAR[Label_Plot]</label>
                        </control>
                    </control>
                    <control type="label">
                        <bottom>side</bottom>
                        <left>side</left>
                        <right>side</right>
                        <height>20</height>
                        <align>right</align>
                        <font>Font-ListInfo-Small-Bold</font>
                        <label>$VAR[Label_ExtraInfo_Icons]</label>
                    </control>
                </control>
            </control>
        </control>
    </include>
</includes>

